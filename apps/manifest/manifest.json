{
    "manifest_version": 3,
    "name": "Word Notebook",
    "version": "1.0.0",
    "description": "Revise the vocabulary with assistance in structure",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "tabs",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    }
}